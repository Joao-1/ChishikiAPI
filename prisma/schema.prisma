generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiscordServer {
  id       String                   @id
  prefix   String?                  @default("!")
  language String?                  @default("en-US")
  status   String?                  @default("active")
  commands DiscordServerCommands[]
}

model DiscordCommand {
  id                    Int                     @id @default(autoincrement())
  name                  String
  description           String
  status                String                  @default("disabled")
  type                  String
  DiscordServerCommands DiscordServerCommands[]
}

model DiscordServerCommands {
  discordServer    DiscordServer  @relation(fields: [discordServerId], references: [id])
  discordServerId  String
  discordCommand   DiscordCommand @relation(fields: [discordCommandId], references: [id])
  discordCommandId Int

  @@id([discordServerId, discordCommandId])
}
